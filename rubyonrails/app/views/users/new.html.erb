<% provide(:breadcrumb, 'Sign Up') %>

<div class="thirteen columns content-area">
  <%= form_for(@user, url: {controller: 'users', action: 'create'}, html: {class: 'offset-by-six sign-in'}) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign Up" %>
  <% end %>
</div>
